{% extends 'base.html.twig' %}
{% block title %} Ajouter Un Agent Immobilier{% endblock %}
{% block body %}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        <h4 class="card-title">Les Information De L'Agent Immobilier</h4>
            <p class="card-description">
              Information Primaire
                </p>
                {{ form_start(form, {'attr': { 'class':"form-floating"}}) }}
                    <div class="form-group">
                        {{ form_row(form.nom,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre nom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.prenom,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre prenom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.numero,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre numero'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.email,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre email'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Enregistrer</button>
                {{ form_end(form) }}    

        </div> 
    </div> 
</div>        
{% endblock %}
