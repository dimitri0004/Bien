{% extends 'base.html.twig' %}
{% block title %} Ajouter Un Agent Immobilier{% endblock %}
{% block body %}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">

        <h4 class="card-title">Les Information Du Propreitaire</h4>
            <p class="card-description">
              Information Primaire
                </p>
                <a class="btn btn-success" href="{{ path('propreitaire_afficher') }}" >Liste des Propreitaire</a>
                {{ form_start(form, {'attr': {'class': 'form-sample mt-2'}}) }}
                    <div class="form-group">
                        {{ form_row(form.libelle,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre nom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.localisation,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre prenom'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.taille,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre numero'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.prix,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.image,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.Propreitaire,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre email'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.AgentImmobilier,  {'attr': {'class': 'form-control', 'placeholder': 'Enter votre email'}}) }}
                    </div>
                    <button type="submit" class="btn btn-primary me-2">Enregistrer</button>
                {{ form_end(form) }}    

        </div> 
    </div> 
</div>        
{% endblock %}
