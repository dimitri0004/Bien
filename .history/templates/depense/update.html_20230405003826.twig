{% extends 'base.html.twig' %}
{% block title %} Ajouter Une Depense{% endblock %}
{% block body %}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
            <a class="btn btn-success mt-2" href="{{ path('depense_afficher') }}" > Liste Des Depense</a>
        <h4 class="card-title">Modification sur la  Depense</h4>
                {{ form_start(form, {'attr': {'class': 'form-floating mt-2'}}) }}
                    <div class="form-group">
                        {{ form_row(form.date,  {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.montant,  {'attr': {'class': 'form-control', 'placeholder': 'Montant '}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.BienImmobilier,  {'attr': {'class': 'form-control' }}) }}
                    </div>
                    
                    <button type="submit" class="btn btn-primary me-2">modifier</button>
                {{ form_end(form) }}    

        </div> 
    </div> 
</div>        
{% endblock %}
