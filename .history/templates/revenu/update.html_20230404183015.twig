{% extends 'base.html.twig' %}
{% block title %} Ajouter Un Revenu{% endblock %}
{% block body %}
<div class="col-12 grid-margin stretch-card">
    <div class="card">
      <div class="card-body">
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    {{ message }}
                </div>
            {% endfor %}
        <h4 class="card-title"> Modifier les Information d'un revenu</h4>
            <p class="card-description">
              Information Primaire
                </p>
               
                {{ form_start(form, {'attr': {'class': 'form-sample mt-2'}}) }}
                    <div class="form-group">
                        {{ form_row(form.date,  {'attr': {'class': 'form-control'}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.montant,  {'attr': {'class': 'form-control', 'placeholder': 'Montant '}}) }}
                    </div>
                    <div class="form-group">
                        {{ form_row(form.BienImmobilier,  {'attr': {'class': 'form-control' }}) }}
                    </div>
                    
                    <button type="submit" class="btn btn-primary me-2"> <main>Modifier</main></button>
                {{ form_end(form) }}    

        </div> 
    </div> 
</div>        
{% endblock %}
